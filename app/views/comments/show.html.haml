- model_class = Comment
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%dl
  %dt User
  %dd= @comment.user
  %dt Post
  %dd= @comment.post
  %dt Body
  %dd= @comment.body

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), :back, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_comment_path(@comment), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), comment_path(@comment), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
