= simple_form_for(shallow_args(@post, @comment), html: { class: 'form-horizontal'} ) do |f|
  = f.error_notification

  .form-inputs
    = f.association :user
    = f.association :post
    = f.input :body

  .form-actions
    = f.button :submit, class: "btn btn-primary"
    = link_to t('.cancel', :default => t("helpers.links.cancel")), :back, :class => 'btn'
